files:
  /home/ec2-user/setCredential.sh:
    mode: "000755"
    owner: webapp
    group: webapp
    content: |
      echo {\"type\": \"service_account\", \"project_id\": \"cultivated-cove-320001\",  \"private_key_id\": \"$CAPTCHA_KEY_ID\",     \"private_key\": \"$CAPTCHA_PEM\", \"client_email\": \"$CAPTCHA_EMAIL\",  \"client_id\": \"115405318409515778219\",     \"auth_uri\": \"https://accounts.google.com/o/oauth2/auth\",  \"token_uri\": \"https://oauth2.googleapis.com/token\",     \"auth_provider_x509_cert_url\": \"https://www.googleapis.com/oauth2/v1/certs\", \"client_x509_cert_url\":\" $CAPTCHA_X509\" } >> /home/ec2-user/credentials.json
  /home/ec2-user/npmrc.sh:
    mode: "000755"
    owner: webapp
    group: webapp
    content: |
      echo unsafe-perm=true >> /home/ec2-user/npmrc
      
container_commands:
  00_download_epel:
    command: "sudo wget -r --no-parent -A 'epel-release-*.rpm' http://dl.fedoraproject.org/pub/epel/7/x86_64/Packages/e/"
    ignoreErrors: true
    test: test ! -d "/etc/letsencrypt/"
  01_install_epel_release:
    command: "sudo rpm -Uvh dl.fedoraproject.org/pub/epel/7/x86_64/Packages/e/epel-release-*.rpm"
    ignoreErrors: true
    test: test ! -d "/etc/letsencrypt/"
  02_enable_epel:
    command: "sudo yum-config-manager --enable epel*"
    ignoreErrors: true
    test: test ! -d "/etc/letsencrypt/"
  03_update_yum:
    command: "sudo yum update -y --skip-broken"
  04_install_certbot:
    command: "sudo yum install -y certbot python2-certbot-nginx"
    ignoreErrors: true
    test: test ! -d "/etc/letsencrypt/"
  05_install_plugin:
    command: "sudo yum install -y certbot-dns-route53"
    ignoreErrors: true
    test: test ! -d "/etc/letsencrypt/"
  06_get_cert:
    command: "sudo certbot certonly \
    --dns-route53 --dns-route53-propagation-seconds 30 \
    -d *.${DOMAIN} --email ${EMAIL} -q"
    ignoreErrors: true
    test: test ! -d "/etc/letsencrypt/"
  07_cert_link:
    command: "sudo ln -sf /etc/letsencrypt/live/${DOMAIN} /etc/letsencrypt/ebcert"
    ignoreErrors: true
    test: test ! -d "/etc/letsencrypt/"
  08_credentials:
    command:  "sudo rm /home/ec2-user/credentials.json"
    ignoreErrors: true
  09_credentials:
    command:  "sh /home/ec2-user/setCredential.sh"
    ignoreErrors: true
    test: test ! -d "/home/ec2-user/setCredential.sh"
  10_credentials:
    command:  "sudo cp /home/ec2-user/credentials.json /home/webapp/credentials.json"
    ignoreErrors: true
  11_dpkg:
    command: "sudo yum install dpkg -y"
    ignoreErrors: true
  12_download_agent:
    command: "curl -L -O https://artifacts.elastic.co/downloads/beats/elastic-agent/elastic-agent-7.15.2-amd64.deb"
  13_install_agent:
    command: "sudo dpkg -i elastic-agent-7.15.2-amd64.deb"
    ignoreErrors: true
  14_delete_deb:
    command: "sudo rm elastic-agent-7.15.2-amd64.deb"
    ignoreErrors: true
  15_enable_agent:
    command: "sudo elastic-agent enroll --url=${FLEETURL} --enrollment-token=${FLEETTOKEN} -f \
    && sudo systemctl enable elastic-agent \
    && sudo systemctl start elastic-agent"
    ignoreErrors: true
  16_npmrc:
    command: "sh /home/ec2-user/npmrc.sh"
  17_copy_npmrc:
    command: "cp /home/ec2-user/npmrc /home/ec2-user/.npmrc && rm /home/ec2-user/npmrc && /home/ec2-user/npmrc.sh"
    ignoreErrors: true
    test: test ! -d "/home/ec2-user/npmrc"
